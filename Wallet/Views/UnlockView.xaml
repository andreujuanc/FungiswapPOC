<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Wallet.Views.UnlockView"
    BackgroundColor="White"
    NavigationPage.HasNavigationBar="{Binding ShouldShowNavigationBar}">
    <Grid
        RowSpacing="0"
        ColumnSpacing="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="24" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="24" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        <StackLayout
            Grid.Column="1"
            VerticalOptions="Center"
            Spacing="0">
            <Label
                Text="FungiswapWallet"
                FontSize="36"
                TextColor="{StaticResource ColorPrimary}"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="End" />
            <Label
                Text="wallet for your FSW"
                FontSize="16"
                TextColor="{StaticResource ColorTextSecondary}"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Start" />
        </StackLayout>
        <Grid
            Grid.Column="1"
            Grid.Row="1"
            ColumnSpacing="0"
            RowSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="{StaticResource EntryRowHeight}" />
                <RowDefinition
                    Height="{StaticResource EntryRowHeight}" />
                <RowDefinition
                    Height="{StaticResource EntryRowHeight}" />
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>
            <Entry
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Keyboard="Numeric"
                Text="{Binding Passcode}"
                IsPassword="true"
                Placeholder="Enter your PIN" />
            <ContentView
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="1"
                Padding="0, 8"
                VerticalOptions="Start"
                HorizontalOptions="End">
                <Label
                    Text="Forgot PIN?"
                    TextColor="{StaticResource ColorPrimary}"
                    FontSize="{StaticResource FontSizeSmall}"
                    HorizontalTextAlignment="End" />
                <ContentView.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding RecoverCommand}" />
                </ContentView.GestureRecognizers>
            </ContentView>
            <StackLayout
                Spacing="0"
                Grid.Column="0"
                Grid.Row="2">
                <Label
                    Text="No Wallet?"
                    TextColor="{StaticResource ColorTextSecondary}"
                    FontSize="{StaticResource FontSizeSmall}" />
                <ContentView
                    Padding="0, 8"
                    VerticalOptions="End">
                    <Label
                        Text="Create Wallet"
                        TextColor="{StaticResource ColorPrimary}"
                        FontSize="{StaticResource FontSizeSmall}" />
                    <ContentView.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding CreateCommand}" />
                    </ContentView.GestureRecognizers>
                </ContentView>
            </StackLayout>
            <ContentView
                Grid.Column="1"
                Grid.Row="2"
                Padding="16"
                VerticalOptions="Center"
                BackgroundColor="{StaticResource ColorPrimary}">
                <Label
                    Text="UNLOCK"
                    TextColor="{StaticResource ColorTextPrimary}"
                    FontSize="{StaticResource FontSizeNormal}"
                    HorizontalTextAlignment="Center" />
                <ContentView.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding UnlockCommand}" />
                </ContentView.GestureRecognizers>
            </ContentView>
        </Grid>
    </Grid>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color
                x:Key="ColorPrimary">#3574FA</Color>
            <Color
                x:Key="ColorTextPrimary">#FFFFFF</Color>
            <Color
                x:Key="ColorTextSecondary">#B2B2B2</Color>
            <x:Double
                x:Key="FontSizeNormal">16</x:Double>
            <x:Double
                x:Key="FontSizeSmall">14</x:Double>
            <OnPlatform
                x:Key="EntryRowHeight"
                x:TypeArguments="GridLength"
                Android="56"
                iOS="48">
            </OnPlatform>
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>
